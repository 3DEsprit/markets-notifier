{
  "name": "Markets Notifier",
  "version": "1.0",
  "description": "Custom Inbox Nofications",
  "permissions": [
    "activeTab",
    "notifications",
    "declarativeContent",
    "storage",
    "https://blendermarket.com/"
  ],
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "background": {
    "scripts": [
      "utilities.js",
      "background.js",
      "replies.js",
      "preferences.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2
}